<%- include('include/head') %>
<%- include('include/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="display-1 text-center">Contact</h1>
            <p class="text-center lead">Create or edit your contact</p>
            <%- include('include/messages.ejs') %>
            <% if (contact._id) { %>
            <form action="/contact/edit/<%= contact._id %> " method="post">
                <% } else { %>
                <form action="/contact/register" method="post">
                    <% } %>
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" value='<%=contact.name%>' class="form-control" name="name">
                    </div> <br>
                    <div class="form-group">
                        <label>Last name</label>
                        <input type="text" value='<%=contact.lastName%>' class="form-control" name="lastName"
                            placeholder="Insert last name">
                    </div> <br>
                    <div class="form-group">
                        <label>Phone number</label>
                        <input type="tel" value='<%=contact.number%>' class="form-control" name="number"
                            placeholder="Insert number">
                    </div> <br>
                    <div class="form-group">
                        <label>E-mail</label>
                        <input type="email" value='<%=contact.email%>' class="form-control" name="email"
                            placeholder="Insert e-mail">
                    </div> <br>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('include/footer') %>